pipeline {
    agent any
    stages {
        stage ('Sonarqube analysis') {
            script {
                // requires SonarQube Scanner
                def scannerHome = tool 'sonar';

                withSonarQubeEnv('sonar') {
                    echo 'test'
                }
            }
        }
        stage('Build') {
            steps {
                echo ' This is a minimal pipeline'
            }
        }
    }
}